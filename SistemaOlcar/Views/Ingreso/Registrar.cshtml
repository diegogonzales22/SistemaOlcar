@model SistemaOlcar.Models.TableViewModel.TableIngreso
@{
    ViewBag.Title = "Registrar Recepción de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recepción de Mercadería</h2>
<hr />
<div class=" form-control p-4 container">
    @using (Html.BeginForm("Registrar", "Ingreso", FormMethod.Post, new { id = "formulario" }))
    {
        <div class="row">
            <div class="col-md-2">
                <label for="txtFecha">Fecha de Registro:</label>
            </div>
            <div class="col-md-3">
                <label for="txtFecha">@DateTime.Now</label>
            </div>
            <div class="col-md-3 text-end">
                <label for="txtFecha">Fecha de Documento:</label>
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.fechaDocumento, "", new { @class = "form-control", @autocomplete = "off" })
            </div>
        </div>
        <br />      
        <div class="row">
            <div class="col-md-2">
                <label for="txtFecha">Tipo de Documento:</label>
            </div>
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.tipoDocumento, new SelectList(
                        new[]
                        {
                            new { Value = "FACTURA", Text = "FACTURA" },
                            new { Value = "BOLETA DE VENTA", Text = "BOLETA DE VENTA" },
                            new { Value = "NOTA DE CRÉDITO", Text = "NOTA DE CRÉDITO" },
                            new { Value = "NOTA DE DÉBITO", Text = "NOTA DE DÉBITO" },
                            new { Value = "VALE", Text = "VALE" },
                        },
                        "Value",
                        "Text",
                        Model
                    ), null, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-3 text-end">
                <label for="txtFecha">Número de Documento:</label>
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.nroDocumento, "", new { @class = "form-control", @autocomplete = "off", @onKeyPress = "return checkAlfaNumGuion(event)" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2"><label for="cboProveedor">Proveedor:</label></div>
            <div class="col-md-5">
                @Html.DropDownList("idProveedor", ViewBag.ListaProveedor as List<SelectListItem>, "", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                <label for="txtOrden">Órden de Compra:</label>
            </div>
            <div class="col-md-2">
                <input type="text" class="form-control" id="idOrden" name="idOrden" readonly />
            </div>
            <div class="col-md-3">
                <a class="btn btn-primary" onclick="ordenesModal()">Agregar Órden</a>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                <label for="txtFecha">Observación:</label>
            </div>
            <div class="col-md-5">
                @Html.TextBoxFor(m => m.observacion, "", new { @class = "form-control" })
            </div>
        </div>
        <hr />
        @*Detalle de Ingreso*@
        <div class="row">
            <div class="col-m-3">
                <a class="btn btn-primary" onclick="productosModal()">Agregar Producto</a>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                <label for="txtCodigo">Código:</label>
            </div>
            <div class="col-md-2">
                <input type="text" class="form-control" id="txtCodigo" disabled />
            </div>
            <div class="col-md-1">
                <label for="txtProducto">Producto:</label>
            </div>
            <div class="col-md-6">
                <input type="text" class="form-control" id="idProducto" disabled />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2">
                <label for="txtCosto">Valor Venta S/.</label>
            </div>
            <div class="col-md-2">
                <input type="text" class="form-control" id="txtCosto" />
            </div>
            <div class="col-md-1">
                <label for="txtCantidad">Dcto %</label>
            </div>
            <div class="col-md-2">
                <input type="text" class="form-control" id="txtDescuento" />
            </div>
            <div class="col-md-1">
                <label for="txtCantidad">Cantidad:</label>
            </div>
            <div class="col-md-2">
                <input type="text" class="form-control" id="txtCantidad" onKeyPress="return soloNumeros(event)" onKeyUp="pierdeFoco(this)" />
            </div>
            <div class="col-md-2">
                <a id="addToList" class="btn btn-success"><i data-feather="plus-circle" style="width:20px; height:20px"></i></a>
            </div>
        </div>
        <br />
        <div id="divConceptos">
            <table class="table" id="tablaDetalle">
                <thead>
                    <tr>
                        <th class="table-dark">Código</th>
                        <th class="table-dark">Nombre</th>
                        <th class="table-dark">Cantidad</th>
                        <th class="table-dark">Valor Venta S/.</th>
                        <th class="table-dark">Descuento %</th>
                        <th class="table-dark">Total S/.</th>
                        <th class="table-dark"></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <br />
        <div class="row justify-content-center">
            <div class="col-md-1">
                <label for="txtNeto"><strong>Neto S/.</strong></label>
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.totalNeto, "", new { @class = "form-control", @readonly = true })
            </div>
            <div class="col-md-1">
                <label for="txtIGV"><strong>IGV S/.</strong></label>
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.totalIGV, "", new { @class = "form-control", @readonly = true })
            </div>
            <div class="col-md-1">
                <label for="txtTotal"><strong>Total S/.</strong></label>
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.costoTotal, "", new { @class = "form-control", @readonly = true })
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a href='@Url.Action("Index")' class="btn btn-secondary">Volver</a>
        </div>
    }
</div>

@*Modal PRODUCTOS*@
<div class="modal fade" id="FormModalProd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h4 class="modal-title text-white" id="exampleModalLabel">Productos</h4>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-control p-4">
                    <table id="tablaProductos" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>CÓD.</th>
                                <th>NOMBRE</th>
                                <th>CÓDIGO EAN</th>
                                <th>MARCA</th>
                                <th>STOCK</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@*Modal ÓRDEN DE COMPRA*@
<div class="modal fade" id="FormModalOrden" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title text-white" id="exampleModalLabel">Órdenes de compra</h4>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-control p-4">
                    <table id="tablaOrden" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>No. ÓRDEN</th>
                                <th>FECHA DE CREACIÓN</th>
                                <th>FECHA DE APROBACIÓN</th>
                                <th>PROVEEDOR</th>
                                <th>IMPORTE</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        //---MODAL PRODUCTOS
        function productosModal() {
            var tabladata;
            tabladata = $("#tablaProductos").DataTable({
                "autoWidth": false,
                "drawCallback": function (settings) {
                    feather.replace();
                },
                "ajax": {
                    "url": '@Url.Action("ProductosActivos", "OrdenCompra")',
                    "type": "GET",
                    "dataType": "json"
                },
                "columns": [
                    { "data": "idProducto" },
                    { "data": "nombre"},
                    { "data": "codigoEAN" },
                    { "data": "marca" },
                    { "data": "stock" },
                    {
                        "data": "idProducto", "render": function (data) {
                            return "<a type='button' class='btn btn-primary btn-sm ms-2' onclick='agregarProdDesdeModal("+data+")'><i data-feather='check-square'></i></a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "50px"
                    },

                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                },
                "bDestroy": true
            });

            $('#FormModalProd').modal('show');
        }

        //---AGREGAR PRODUCTO DESDE MODAL
        function agregarProdDesdeModal(data) {
            jQuery.ajax({
                    url: "@Url.Action("ObtenerProducto","OrdenCompra")" + "?idProd=" + data,
                    type: "GET",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        if (data != null) {
                            $("#txtCodigo").val(data.idProducto);
                            $("#idProducto").val(data.nombre);
                            $("#txtCosto").val(data.costoSinIGV);
                        }
                    }
                });
            $("#FormModalProd").modal('hide');
        }

        //---MODAL ÓRDENES
        function ordenesModal() {
            var tabladata;
            tabladata = $("#tablaOrden").DataTable({
                "autoWidth": false,
                "drawCallback": function (settings) {
                    feather.replace();
                },
                "ajax": {
                    "url": '@Url.Action("OrdenesAprobadas", "Ingreso")',
                    "type": "GET",
                    "dataType": "json"
                },
                "columns": [
                    { "data": "idOrden" },
                    { "data": "fechaRegistro"},
                    { "data": "fechaAprobacion" },
                    { "data": "proveedor" },
                    { "data": "costoTotal" },
                    {
                        "data": "idOrden", "render": function (data) {
                            return "<a type='button' class='btn btn-primary btn-sm ms-2' onclick='agregarOrdenDesdeModal("+data+")'><i data-feather='check-square'></i></a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "50px"
                    },

                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                },
                "bDestroy": true
            });

            $('#FormModalOrden').modal('show');
        }

        //---AGREGAR ORDEN DESDE MODAL
        function agregarOrdenDesdeModal(data) {
            jQuery.ajax({
                    url: "@Url.Action("ObtenerOrden","Ingreso")" + "?idOrden=" + data,
                    type: "GET",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        if (data != null) {
                            $("#idOrden").val(data.idOrden);
                        }
                    }
                });
            $("#FormModalOrden").modal('hide');
        }


    </script>

    <script src="@Url.Content("~/Scripts/Vistas/Ingreso_Registrar.js")" type="text/javascript"></script>
}