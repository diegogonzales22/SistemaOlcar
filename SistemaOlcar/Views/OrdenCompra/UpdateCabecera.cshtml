@model SistemaOlcar.Models.OrdenCompra
@{
    ViewBag.Title = "Editar Órden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Órden de Compra</h2>
<h4>Nro. de Orden: @Html.DisplayFor(model => model.idOrden)</h4>
<hr />

@using (Html.BeginForm("UpdateCabecera", "OrdenCompra", FormMethod.Post, new { id = "formulario" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.idOrden)
    @Html.HiddenFor(model => model.creadoPor)
    @Html.HiddenFor(model => model.fechaRegistro)
    @Html.HiddenFor(model => model.situacion)
    @Html.HiddenFor(model => model.totalNeto)
    @Html.HiddenFor(model => model.totalIGV)
    @Html.HiddenFor(model => model.costoTotal)
    @Html.HiddenFor(model => model.fechaAprobacion)
    @Html.HiddenFor(model => model.aprobadoPor)
<div class="form-control p-3">
    <div class="row">
        <div class="col-md-2"><label for=""><b>Fecha de Expiración:</b></label></div>
        <div class="col-md-7">
            @Html.TextBoxFor(m => m.fechaCaducidad, "", new { @class = "form-control", @autocomplete = "off" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2"><label for="cboProveedor"><b>Proveedor:</b></label></div>
        <div class="col-md-7">
            @Html.DropDownList("idProveedor", ViewBag.ListaProveedor as List<SelectListItem>, "", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2"><label for=""><b>Observación:</b></label></div>
        <div class="col-md-7">
            @Html.TextBoxFor(x => x.observacion, "", new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-success">Terminar Edición</button>
        <a href="@Url.Action("Editar", "OrdenCompra")?id=@Html.DisplayFor(model => model.idOrden)" class="btn btn-danger">Volver</a>
    </div>
</div>
}

